<%- include('partials/header.ejs') %>

  <body>

    <main>
      <h1>Cool Images</h1>

      <form action="/search">
        <input placeholder="Type Keyword" type="text" name="keyword" />
        <button>Search</button>
        <br/><a id="favLink" href="/getKeywords">See Favorites</a>
      </form>
      <hr>
      
      <div id="resultsContainer">
        <% imageUrlArray.forEach((url, i) => { %>
        <div class="result-item">
          <img class="img" src='<%= url %>' width="200" height="200" />
          <img class="favoriteIcon" src='img/favorite.png' width='20' />
        </div>
      <% }); %>
      </div>
      
    </main>

    <%- include('partials/footer.ejs') %>
